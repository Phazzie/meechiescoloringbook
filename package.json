{
	"name": "meechies-coloringbook",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"format": "prettier --check .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:unit": "vitest run",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"test:e2e": "playwright test",
		"chamber:lock": "node scripts/chamber-lock.mjs",
		"shaolin:lint": "node scripts/shaolin-lint.mjs",
		"seam:ledger": "node scripts/seam-ledger.mjs",
		"proof:tape": "node scripts/proof-tape.mjs",
		"clan:chain": "node scripts/clan-chain.mjs",
		"cipher:gate": "node scripts/cipher-gate.mjs",
		"assumption:alarm": "node scripts/assumption-alarm.mjs",
		"rewind": "node scripts/rewind.mjs",
		"hooks:install": "node scripts/install-githooks.mjs",
		"verify:runner": "node scripts/verify-runner.mjs",
		"verify": "npm run chamber:lock && npm run verify:runner && npm run shaolin:lint && npm run assumption:alarm && npm run seam:ledger && npm run clan:chain && npm run proof:tape && npm run cipher:gate"
	},
	"dependencies": {
		"pdf-lib": "^1.17.1",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@playwright/test": "^1.58.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^22.10.1",
		"@typescript-eslint/parser": "^8.19.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"jsdom": "^28.0.0",
		"playwright": "^1.58.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^3.2.4"
	}
}
